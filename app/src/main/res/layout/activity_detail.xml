<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:card_view="http://schemas.android.com/apk/res_auto"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:id="@+id/imageviewid"
                    android:padding="5dp"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/blurbackbr"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/namedetail"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:padding="5dp"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:textColor="@color/orangelight"
                        android:text="Post Name"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/datedetail"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:padding="5dp"
                        android:maxLines="1"
                        android:text="Date"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/categorydetail"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:padding="5dp"
                        android:textStyle="italic"
                        android:text="Category : News"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/descriptiondetail"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:padding="5dp"
                        android:maxLines="3"
                        android:text="Post description here ....."/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/senderdetail"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:padding="5dp"
                        android:maxLines="3"
                        android:text="posted by"/>


                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>

</RelativeLayout>