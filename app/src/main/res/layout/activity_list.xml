<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".List"
    android:id="@+id/dlout"
    android:background="@drawable/orangegradientlight">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/welcometext"
    android:text="Welcome "
    android:textColor="@color/orangelight"
    android:layout_marginLeft="100dp"
    android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usermail"
        android:text=" "
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_toRightOf="@+id/welcometext"
        android:textColor="@color/orangelight"
        android:layout_marginLeft="5dp"
        android:textSize="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="100dp">

    </ScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rowone">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/one">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="45dp"
            android:src="@drawable/bookshelf"
            android:clickable="true"
            android:id="@+id/cmimage"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course Material"
            android:layout_marginLeft="45dp"
            android:textColor="@color/orangedark"
            android:textSize="13dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/two"
        android:layout_toRightOf="@+id/one"
        android:layout_marginLeft="70dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="25dp"
            android:clickable="true"
            android:layout_marginLeft="25dp"
            android:src="@drawable/results"
            android:id="@+id/resimage" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Results"
            android:textAlignment="center"
            android:layout_marginLeft="15dp"
            android:textColor="@color/orangedark"
            android:textSize="13dp"
            android:textStyle="bold"/>

    </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rowtwo"
        android:layout_below="@+id/rowone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/three">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="45dp"
                android:src="@drawable/parent"
                android:id="@+id/parimage"
                android:clickable="true"
                android:onClick="parimage"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parent Login"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="55dp"
                android:textColor="@color/orangedark"
                android:textSize="13dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/four"
            android:layout_toRightOf="@+id/three"
            android:layout_marginLeft="70dp">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:contextClickable="true"
                android:src="@drawable/studentportal"
                android:id="@+id/stportalimage"
                android:clickable="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Student Portal"
                android:textAlignment="center"
                android:layout_marginLeft="15dp"
                android:textColor="@color/orangedark"
                android:textSize="13dp"
                android:textStyle="bold"/>

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rowthree"
        android:layout_below="@+id/rowtwo">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/five">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="45dp"
                android:src="@drawable/newsfeed"
                android:id="@+id/nfimage"
                android:contextClickable="true"
                android:clickable="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sathyabama Chit Chat"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="55dp"
                android:textColor="@color/orangedark"
                android:textSize="13dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/six"
            android:layout_toRightOf="@+id/five"
            android:layout_marginLeft="70dp">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:clickable="true"
                android:src="@drawable/fee"
                android:id="@+id/feeimage" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fees"
                android:textAlignment="center"
                android:layout_marginLeft="15dp"
                android:textColor="@color/orangedark"
                android:textSize="13dp"
                android:textStyle="bold"/>

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/sign_out"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:background="@color/orangelight"
        android:text="LogOut"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/userprofile"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/orangelight"
        android:layout_above="@+id/sign_out"
        android:text="My Profile"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="gone"
        android:layout_above="@+id/sign_out"/>


    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/material_design_android_floating_action_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/userprofile"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        app:menu_animationDelayPerItem="55"
        app:menu_backgroundColor="@android:color/transparent"
        app:menu_buttonSpacing="0dp"
        app:menu_colorNormal="@color/orangelight"
        app:menu_colorPressed="#dc4b3f"
        app:menu_colorRipple="#99d4d4d4"
        app:menu_fab_label="Close"
        app:menu_fab_size="normal"
        app:menu_icon="@drawable/fab_add"
        app:menu_labels_colorNormal="@color/orangelight"
        app:menu_labels_colorPressed="@color/orangedark"
        app:menu_labels_colorRipple="#66efecec"
        app:menu_openDirection="up">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/material_design_floating_action_menu_item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/chat"
            app:rippleColor="@color/orangelight"
            app:fab_label="Chat"
            app:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/material_design_floating_action_menu_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/shareicon"
            app:rippleColor="@color/orangelight"
            app:fab_label="Share App"
            app:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/material_design_floating_action_menu_item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rippleColor="@color/orangelight"
            android:src="@mipmap/heart"
            app:fab_label="Created by"
            app:fab_size="mini" />


    </com.github.clans.fab.FloatingActionMenu>


</RelativeLayout>


    <com.rom4ek.arcnavigationview.ArcNavigationView
        android:id="@+id/nvview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/orangebackground"
        android:fitsSystemWindows="true"
        app:itemBackground="@color/orangebackground"
        app:headerLayout="@layout/header"
        app:menu="@menu/drawermenu"
        app:arc_cropDirection="cropInside"
        app:arc_width="96dp"/>


</android.support.v4.widget.DrawerLayout>