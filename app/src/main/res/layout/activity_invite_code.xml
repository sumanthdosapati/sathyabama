<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InviteCode">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="******"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:textStyle="bold"
        android:textColor="@color/orangelight"
        android:id="@+id/buscode"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save this Code. It cannot be changed."
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:textStyle="normal"
        android:textColor="@color/orangelight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share this code with others to track you"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:textStyle="normal"
        android:textColor="@color/orangelight" />

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/codebutton"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true"
        android:background="@color/orangelight"
        android:text="OK"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="20sp"
        android:onClick="registerCode"/>

</RelativeLayout>